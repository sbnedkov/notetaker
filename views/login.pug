doctype html
html(ng-app="user")
  head
    link(rel="stylesheet", href="/css/style.css")
    script(type="application/javascript", src="/node_modules/angular/angular.min.js")
    script(type="application/javascript", src="/public/user.js")

  body
    div(ng-controller="UserCtrl")
      form.loginform(action="login", method="POST")
        input(name="username", type="text")
        input(name="password", type="password")
        button Log in
      button.register-button(ng-click="registerUser()") Register
