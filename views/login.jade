doctype html
html(ng-app="user")
  head
    link(rel="stylesheet", href="/css/style.css")
    script(type="application/javascript", src="//ajax.googleapis.com/ajax/libs/angularjs/1.3.5/angular.js")
    script(type="application/javascript", src="//cdnjs.cloudflare.com/ajax/libs/lodash.js/2.4.1/lodash.js")
    script(type="application/javascript", src="/public/user.js")

  body
    div(ng-controller="UserCtrl")
      form.loginform(action="login", method="POST")
        input(name="username", type="text")
        input(name="password", type="password")
        button Log in
      button.register-button(ng-click="registerUser()") Register
